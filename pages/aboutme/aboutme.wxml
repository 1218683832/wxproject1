<!--pages/aboutme/aboutme.wxml-->
<view class='container'>
  <image class='head' src='/images/head.jpg'></image>
  <text class='yourseft'>自我介绍</text>  

  <view class='myinfo' data-id='1'>
    <label>我的信息</label>
    <view>
      <label>行业</label><label>{{myinfo['industry']}}</label>
    </view>
    <view>
      <label>工作领域</label><label>{{myinfo['workarea']}}</label>
    </view>
    <view>
      <label>公司</label><label>{{myinfo['company']}}</label>
    </view>
    <view>
      <label>来自</label><label>{{myinfo['comefrom']}}</label>
    </view>
    <view>
      <label>经常出没</label><label>{{myinfo['hangout']}}</label>
    </view>
    <view>
      <label>个人签名</label><label>{{myinfo['idiograph']}}</label>
    </view>
  </view>

  <view class='mysocialaccount'>
    <label>我的社交账号</label>
    <view>
      <label>我的微信</label><label>{{mysocialaccount['wxid']}}</label>
    </view>
  </view>

  <view class='mytags'>
    <label>我的标签</label>
    <view>
      <label  wx:for="{{mytags}}">{{item}}</label>
    </view>
  </view>

  <view class='myhobbys'>
    <label>我的兴趣</label>
    <view>
      <label wx:for="{{myhobbys}}">{{item}}</label>
    </view>
  </view>
</view>
